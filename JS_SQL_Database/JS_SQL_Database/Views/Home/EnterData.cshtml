@model JS_SQL_Database.Models.DisplayData

@{
    ViewBag.Title = "EnterData";
}

<h2>Enter Data</h2>

<div class="col-lg-6 col-md-6" id="Add_new_data">


    <div class="col-lg-12 col-md-12" id="Add_students">

        @using (Ajax.BeginForm("AddStudent", "Home", new AjaxOptions
        {

            HttpMethod = "POST"
        }))
        {
            <label>Add student to database:</label>
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="_name" name="name">


                <input type="submit" class="btn btn-default" value="Add">

            </div>
        }






    </div>

    <hr />

    <div class="col-lg-12 col-md-12" id="Add_teachers">


        @using (Ajax.BeginForm("AddTeacher", "Home", new AjaxOptions
        {

            HttpMethod = "POST"
        }))
        {
            <label>Add teacher to database:</label>
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="_name" name="name">


                <input type="submit" class="btn btn-default" value="Add">

            </div>
        }



    </div>

    <hr />

    <div class="col-lg-12 col-md-12" id="Add_courses">

        @using (Ajax.BeginForm("AddCourse", "Home", new AjaxOptions
        {

            HttpMethod = "POST"
        }))
        {
            <label>Add course to database:</label>
            <div class="form-group">
                <label for="name">Course Id:</label>
                <input type="text" class="form-control" id="_courseid" name="courseid">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="_name" name="name">


                <input type="submit" class="btn btn-default" value="Add">

            </div>
        }



    </div>

    <hr />

    <div class="col-lg-12 col-md-12" id="Add_assignments">

        @using (Ajax.BeginForm("AddAssignment", "Home", new AjaxOptions
        {

            HttpMethod = "POST"
        }))
        {
            <label>Add assignment to database:</label>
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="_name" name="name">
                <label for="name">Field:</label>
                <input type="text" class="form-control" id="_field" name="field">


                <input type="submit" class="btn btn-default" value="Add">

            </div>
        }


    </div>

</div>

<div class="col-lg-6 col-md-6" id="Assign_data">

    <div class="col-lg-12 col-md-12" id="Assign student to course">

        @using (Ajax.BeginForm("AssignStudentToCourse", "Home", new AjaxOptions
        {

            HttpMethod = "POST"
        }))
        {
        <label>Assign student to course:</label>
            <div class="form-group">
                <label for="name">Student Id:</label>
                <input type="text" class="form-control" id="_name" name="student">
                <label for="name">Course Id:</label>
                <input type="text" class="form-control" id="_field" name="course">


                <input type="submit" class="btn btn-default" value="Add">

            </div>
        }




    </div>
    </div>
