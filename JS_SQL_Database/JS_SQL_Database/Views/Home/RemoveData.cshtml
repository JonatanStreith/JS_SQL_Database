
@{
    ViewBag.Title = "RemoveData";
}

<h2>Remove Data</h2>

<div class="col-lg-6 col-md-6" id="Remove_data">


    <div class="col-lg-12 col-md-12" id="Remove_students">

        @using (Ajax.BeginForm("RemoveStudent", "Home", new AjaxOptions
        {

            HttpMethod = "POST"
        }))
        {
            <label>Remove student from database:</label>
            <div class="form-group">
                <label for="name">Id:</label>
                <input type="number" class="form-control" id="_name" value="0" name="id">


                <input type="submit" class="btn btn-default" name="button" value="Remove">
                <input type="submit" class="btn btn-default" name="button" value="Remove all">

            </div>
        }


    </div>

    <hr />

