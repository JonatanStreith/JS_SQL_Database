@model JS_SQL_Database.Models.Course
@using JS_SQL_Database.Models

<div class="col-lg-12 col-md-12">

    <span class="col-lg-3 col-md-3">@Model.Id</span>
    <span class="col-lg-3 col-md-3">@Model.CourseId</span>
    <span class="col-lg-6 col-md-6">@Model.Name</span>
</div>

<hr />


<span class="col-lg-12 col-md-12">Assignments:</span><br />

@{
    foreach (Assignment a in Model.Assignments)
    {

        <div class="col-lg-12 col-md-12">

            <span class="col-lg-2 col-md-2" id="id">@a.Id</span>
            <span class="col-lg-10 col-md-10" id="name">@a.Name</span>

        </div>

    }
}

<hr />

<span class="col-lg-12 col-md-12">Students:</span><br />


@{
    foreach (Student s in Model.StudentsAttending)
    {

        <div class="col-lg-12 col-md-12">

            <span class="col-lg-2 col-md-2" id="id">@s.Id</span>
            <span class="col-lg-10 col-md-10" id="name">@s.Name</span>

        </div>

    }
}

<hr />
@{
    if (Model.Teaching != null)
    {
        <span class="col-lg-12 col-md-12">Teacher: @Model.Teaching.Name</span>
    }
    else
    {
        <span class="col-lg-12 col-md-12">Teacher: Not assigned.</span>

    }
}