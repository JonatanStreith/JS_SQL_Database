@model JS_SQL_Database.Models.Course


<div class="col-lg-8 col-md-8">
    <br />
    <span class="col-lg-3 col-md-3" id="id">@Model.CourseId</span>
    <span class="col-lg-3 col-md-3" id="name">@Model.Name</span>


    @{
        if (Model.Teaching == null)
        {
            <span class="col-lg-3 col-md-3" id="teacher">
                Teacher not assigned.
            </span>
        }

        else
        {

            <span class="col-lg-3 col-md-3" id="teacher">
                @Model.Teaching.Name

                ddd
            </span>


        }



    }


</div>